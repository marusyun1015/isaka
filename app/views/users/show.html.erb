<h1>ユーザー情報</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>


<h2>ユーザーの投稿一覧</h2>
<% @user.books.each do |t| %>
  タイトル：<%= t.title %><br>
  <%= image_tag t.image_url, size: "210x297" if t.image? %>
<% end %>

<h2>「読みたい」した本一覧</h2>
<% @user.wanted_books.each do |t| %>
  投稿者：<%= t.user.name %><br>
  タイトル：<%= t.title %><br>
  <%= image_tag t.image_url, size: "210x297" if t.image? %> 
<% end %>

<h2>「読んだ」した本一覧</h2>
<% @user.liked_books.each do |t| %>
  投稿者：<%= t.user.name %><br>
  タイトル：<%= t.title %><br>
  <%= image_tag t.image_url, size: "210x297" if t.image? %> 
<% end %>

